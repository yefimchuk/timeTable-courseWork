@{
    ViewBag.Title = "Timetable";
}

<p class="lead">@ViewBag.Message </p>

<div class="row">
    <form action="" method="post">
        <div class="row">
            <input type="text" placeholder="DayOfWeek" class="center-block input-lg" name="day" />
        </div>

        <div class="row">
            <input type="text" placeholder="Number of lesson" class="center-block input-lg" name="number" />
        </div>

        <div class="row">
            <input type="text" placeholder="Group" class="center-block input-lg" name="group" />
        </div>

        <div class="row">
            <input type="text" placeholder="Teacher" class="center-block input-lg" name="teatcher" />
        </div>

        <div class="row">
            <input type="text" placeholder="Auditory" class="center-block input-lg" name="auditory" />
        </div>

        <div class="row">
            <input type="text" placeholder="Subject" class="center-block input-lg" name="subject" />
        </div>

        <div class="row">
            <input type="submit" class="center-block btn" value="Add" />
        </div>
    </form>
</div>